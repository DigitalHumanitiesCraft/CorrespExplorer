<?xml version="1.0" encoding="UTF-8"?>
<!-- Test CMIF covering all uncertainty cases for CorrespExplorer -->
<!-- Use: Load via "Uncertainty Test" on index.html -->
<!-- 22 test cases covering all uncertainty types -->
<TEI xmlns="http://www.tei-c.org/ns/1.0">
  <teiHeader>
    <fileDesc>
      <titleStmt>
        <title>Test Dataset: Uncertainty Cases</title>
        <editor>CorrespExplorer Test</editor>
      </titleStmt>
      <publicationStmt>
        <publisher>CorrespExplorer</publisher>
        <availability>
          <licence target="https://creativecommons.org/licenses/by/4.0/">CC-BY 4.0</licence>
        </availability>
        <date when="2025-11-27"/>
        <idno type="URL">https://example.org/test-uncertainty.xml</idno>
      </publicationStmt>
      <sourceDesc>
        <bibl xml:id="test-source" type="online">Test Source for Uncertainty Cases</bibl>
      </sourceDesc>
    </fileDesc>
    <profileDesc>

      <!-- ============================================== -->
      <!-- SECTION A: DATE UNCERTAINTY (Cases 001-007)   -->
      <!-- ============================================== -->

      <!-- CASE 001: Complete data (baseline) - exact date YYYY-MM-DD -->
      <correspDesc ref="https://example.org/letter/001" source="#test-source" key="001">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-06-15"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
        <note>
          <ref type="hasLanguage" target="de"/>
        </note>
      </correspDesc>

      <!-- CASE 002: Year-month only date (YYYY-MM) -->
      <!-- Expected: "Jun 1900" with .date-imprecise class -->
      <correspDesc ref="https://example.org/letter/002" source="#test-source" key="002">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-06"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 003: Year only date (YYYY) -->
      <!-- Expected: "ca. 1900" with .date-imprecise class -->
      <correspDesc ref="https://example.org/letter/003" source="#test-source" key="003">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 004: Date range with from/to -->
      <!-- Expected: "1. Jun 1900 - 30. Jun 1900" with .date-range class -->
      <correspDesc ref="https://example.org/letter/004" source="#test-source" key="004">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date from="1900-06-01" to="1900-06-30"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 005: Date with notBefore/notAfter (terminus post/ante quem) -->
      <!-- Expected: "1. Jan 1900 - 31. Dez 1900" with .date-range class -->
      <correspDesc ref="https://example.org/letter/005" source="#test-source" key="005">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date notBefore="1900-01-01" notAfter="1900-12-31"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 006: Date with cert="low" (uncertain dating) -->
      <!-- Expected: "15. Jun 1900" + question mark icon with tooltip -->
      <correspDesc ref="https://example.org/letter/006" source="#test-source" key="006">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-06-15" cert="low"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 007: No date at all -->
      <!-- Expected: "Datum unbekannt" with .date-unknown class -->
      <correspDesc ref="https://example.org/letter/007" source="#test-source" key="007">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- ============================================== -->
      <!-- SECTION B: PERSON UNCERTAINTY (Cases 008-013) -->
      <!-- ============================================== -->

      <!-- CASE 008: Unknown sender [NN] -->
      <!-- Expected: Avatar "?", .person-unknown class -->
      <correspDesc ref="https://example.org/letter/008" source="#test-source" key="008">
        <correspAction type="sent">
          <persName>[NN]</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-07-01"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 009: Unknown sender "Unbekannt" -->
      <!-- Expected: Avatar "?", .person-unknown class -->
      <correspDesc ref="https://example.org/letter/009" source="#test-source" key="009">
        <correspAction type="sent">
          <persName>Unbekannt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-07-02"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 010: Partial name "Rozario, [NN] de" -->
      <!-- Expected: Avatar "R?", .person-partial class -->
      <correspDesc ref="https://example.org/letter/010" source="#test-source" key="010">
        <correspAction type="sent">
          <persName>Rozario, [NN] de</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-07-03"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 011: Unknown recipient -->
      <!-- Expected: Recipient shows Avatar "?", .person-unknown class -->
      <correspDesc ref="https://example.org/letter/011" source="#test-source" key="011">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-07-04"/>
        </correspAction>
        <correspAction type="received">
          <persName>Unknown</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 012: Person without authority reference (named but not identified) -->
      <!-- Expected: Name shown, .person-named class, no VIAF/GND badge -->
      <correspDesc ref="https://example.org/letter/012" source="#test-source" key="012">
        <correspAction type="sent">
          <persName>Max Mustermann</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-07-05"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 013: Person with GND instead of VIAF -->
      <!-- Expected: Normal display with GND badge -->
      <correspDesc ref="https://example.org/letter/013" source="#test-source" key="013">
        <correspAction type="sent">
          <persName ref="https://d-nb.info/gnd/118540238">Johann Wolfgang von Goethe</persName>
          <placeName ref="http://sws.geonames.org/2812482">Weimar</placeName>
          <date when="1900-07-06"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
        </correspAction>
      </correspDesc>

      <!-- ============================================== -->
      <!-- SECTION C: PLACE UNCERTAINTY (Cases 014-018)  -->
      <!-- ============================================== -->

      <!-- CASE 014: Unknown place "Unbekannt" -->
      <!-- Expected: .place-unknown class, no map marker -->
      <correspDesc ref="https://example.org/letter/014" source="#test-source" key="014">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName>Unbekannt</placeName>
          <date when="1900-08-01"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 015: Region without GeoNames (no coordinates) -->
      <!-- Expected: .place-region class, in "ohne Koordinaten" list -->
      <correspDesc ref="https://example.org/letter/015" source="#test-source" key="015">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName>Steiermark</placeName>
          <date when="1900-08-02"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 016: Country only (no coordinates) -->
      <!-- Expected: .place-region class, in "ohne Koordinaten" list -->
      <correspDesc ref="https://example.org/letter/016" source="#test-source" key="016">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName>Deutschland</placeName>
          <date when="1900-08-03"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 017: No place at all -->
      <!-- Expected: Place field empty or "-" -->
      <correspDesc ref="https://example.org/letter/017" source="#test-source" key="017">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <date when="1900-08-04"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 018: Place with GeoNames but different city -->
      <!-- Expected: Normal display, map marker at Wien -->
      <correspDesc ref="https://example.org/letter/018" source="#test-source" key="018">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2761369">Wien</placeName>
          <date when="1900-08-05"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
      </correspDesc>

      <!-- ============================================== -->
      <!-- SECTION D: SPECIAL CASES (Cases 019-022)      -->
      <!-- ============================================== -->

      <!-- CASE 019: Organization as sender (orgName) -->
      <!-- Expected: Name shown, isOrganization=true -->
      <correspDesc ref="https://example.org/letter/019" source="#test-source" key="019">
        <correspAction type="sent">
          <orgName>Kaiserliche Akademie der Wissenschaften</orgName>
          <placeName ref="http://sws.geonames.org/2761369">Wien</placeName>
          <date when="1900-09-01"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 020: Multiple uncertainties combined -->
      <!-- Expected: All uncertainty indicators visible -->
      <correspDesc ref="https://example.org/letter/020" source="#test-source" key="020">
        <correspAction type="sent">
          <persName>[NN]</persName>
          <placeName>Unbekannt</placeName>
          <date when="1900" cert="low"/>
        </correspAction>
        <correspAction type="received">
          <persName>Unbekannt</persName>
        </correspAction>
      </correspDesc>

      <!-- CASE 021: Letter with language tag -->
      <!-- Expected: Language filter shows "Franzoesisch" -->
      <correspDesc ref="https://example.org/letter/021" source="#test-source" key="021">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2988507">Paris</placeName>
          <date when="1900-09-15"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
        <note>
          <ref type="hasLanguage" target="fr"/>
        </note>
      </correspDesc>

      <!-- CASE 022: Letter with subject/topic -->
      <!-- Expected: Topic visible in Topics view -->
      <correspDesc ref="https://example.org/letter/022" source="#test-source" key="022">
        <correspAction type="sent">
          <persName ref="https://viaf.org/viaf/261931943">Hugo Schuchardt</persName>
          <placeName ref="http://sws.geonames.org/2778067">Graz</placeName>
          <date when="1900-10-01"/>
        </correspAction>
        <correspAction type="received">
          <persName ref="https://viaf.org/viaf/18030027">Julio de Urquijo</persName>
        </correspAction>
        <note>
          <ref type="hasLanguage" target="de"/>
          <ref type="mentionsSubject" target="https://example.org/subject/linguistics">Sprachwissenschaft</ref>
          <ref type="mentionsSubject" target="https://example.org/subject/basque">Baskisch</ref>
        </note>
      </correspDesc>

    </profileDesc>
  </teiHeader>
</TEI>
