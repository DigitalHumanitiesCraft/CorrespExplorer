{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HerData Persons Dataset",
  "description": "JSON schema for HerData persons.json output",
  "type": "object",
  "required": ["meta", "persons"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["generated", "total_women", "with_cmif_data", "with_geodata", "with_gnd"],
      "properties": {
        "generated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "data_source": {
          "type": "string",
          "description": "Description of data source"
        },
        "total_women": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of women in dataset"
        },
        "with_cmif_data": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of women with CMIF letter data"
        },
        "with_geodata": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of women with geodata"
        },
        "with_gnd": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of women with GND ID"
        },
        "gnd_coverage_pct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "geodata_coverage_pct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "data_sources": {
          "type": "object",
          "properties": {
            "persons": { "type": "string" },
            "geodata": { "type": "string" },
            "cmif": { "type": "string" }
          }
        },
        "timeline": {
          "type": "array",
          "description": "Aggregated correspondence timeline",
          "items": {
            "type": "object",
            "required": ["year", "count"],
            "properties": {
              "year": {
                "type": "integer",
                "minimum": 1760,
                "maximum": 1824,
                "description": "Year of correspondence"
              },
              "count": {
                "type": "integer",
                "minimum": 1,
                "description": "Number of letters/mentions in this year"
              }
            }
          }
        }
      }
    },
    "persons": {
      "type": "array",
      "minItems": 1,
      "description": "Array of person objects",
      "items": {
        "type": "object",
        "required": ["id", "name", "role", "normierung", "sndb_url"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[0-9]+$",
            "description": "SNDB person ID"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Person display name"
          },
          "name_variants": {
            "type": "array",
            "description": "Alternative name forms",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "role": {
            "type": "string",
            "enum": ["sender", "mentioned", "both", "indirect"],
            "description": "Role in correspondence corpus"
          },
          "roles": {
            "type": "array",
            "description": "Detailed role array",
            "items": {
              "type": "string",
              "enum": ["sender", "mentioned"]
            }
          },
          "normierung": {
            "type": "string",
            "enum": ["gnd", "sndb"],
            "description": "Authority file normalization"
          },
          "gnd": {
            "type": "string",
            "pattern": "^[0-9X-]+$",
            "description": "GND identifier"
          },
          "sndb_url": {
            "type": "string",
            "format": "uri",
            "pattern": "^https://ores\\.klassik-stiftung\\.de/ords/f\\?p=900:2:::::P2_ID:[0-9]+$",
            "description": "SNDB person page URL"
          },
          "letter_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of letters sent by this person"
          },
          "mention_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of times mentioned in letters"
          },
          "letter_years": {
            "type": "array",
            "description": "Unique years of correspondence activity",
            "items": {
              "type": "integer",
              "minimum": 1760,
              "maximum": 1824
            }
          },
          "dates": {
            "type": "object",
            "description": "Life dates",
            "properties": {
              "birth": {
                "type": "string",
                "pattern": "^[0-9]{4}$",
                "description": "Birth year (4 digits)"
              },
              "death": {
                "type": "string",
                "pattern": "^[0-9]{4}$",
                "description": "Death year (4 digits)"
              }
            }
          },
          "places": {
            "type": "array",
            "description": "Associated places with coordinates",
            "items": {
              "type": "object",
              "required": ["name", "lat", "lon"],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Place name"
                },
                "lat": {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90,
                  "description": "Latitude in decimal degrees"
                },
                "lon": {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180,
                  "description": "Longitude in decimal degrees"
                },
                "type": {
                  "type": "string",
                  "description": "Place type (Geburtsort, Sterbeort, Wirkungsort, etc.)"
                }
              }
            }
          },
          "occupations": {
            "type": "array",
            "description": "Professional occupations",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Occupation name"
                },
                "type": {
                  "type": "string",
                  "description": "Occupation type/category"
                }
              }
            }
          },
          "biography": {
            "type": "string",
            "description": "Biographical text from projekt_regestausgabe.xml"
          },
          "relationships": {
            "type": "array",
            "description": "AGRELON relationships to other persons",
            "items": {
              "type": "object",
              "required": ["target_id", "type"],
              "properties": {
                "target_id": {
                  "type": "string",
                  "pattern": "^[0-9]+$",
                  "description": "SNDB ID of related person"
                },
                "type": {
                  "type": "string",
                  "minLength": 1,
                  "description": "AGRELON relationship type label"
                },
                "type_id": {
                  "type": "string",
                  "description": "AGRELON type identifier"
                },
                "reciprocal_type": {
                  "type": "string",
                  "description": "Reciprocal relationship type"
                }
              }
            }
          },
          "correspondence": {
            "type": "array",
            "description": "Detailed correspondence data",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["sent", "mentioned"],
                  "description": "Type of correspondence involvement"
                },
                "letter_id": {
                  "type": "string",
                  "description": "CMIF letter identifier"
                },
                "date": {
                  "type": "string",
                  "description": "Letter date (ISO 8601 or range)"
                },
                "year": {
                  "type": "integer",
                  "minimum": 1760,
                  "maximum": 1824,
                  "description": "Letter year"
                },
                "place": {
                  "type": "string",
                  "description": "Letter origin place"
                },
                "recipient": {
                  "type": "string",
                  "description": "Recipient name (for sent letters)"
                },
                "recipient_gnd": {
                  "type": "string",
                  "pattern": "^[0-9X-]+$",
                  "description": "Recipient GND ID"
                }
              }
            }
          }
        }
      }
    }
  }
}
